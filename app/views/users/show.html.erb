<h1>Hello from the Profile Page!</h1>

<p><%= @user.first_name %>'s Profile!</p>

<% if @user.gender == "female"%>
  <p>Bust: <%= @user.bust %></p>
  <p>Waist: <%= @user.waist %></p>
  <p>Hip: <%= @user.hips %></p>
<% else %>
  <p>Chest: <%= @user.chest %></p>
  <p>Waist: <%= @user.waist %></p>
  <p>Inseam: <%= @user.inseam %></p>
<% end %>

<%= link_to "Back", '/' %>
<%= link_to "Edit My Profile", edit_user_path(@user) %>
<%= link_to "Delete My Profile", user_path(@user), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>