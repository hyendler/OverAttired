<h1>Hello from the Profile Page!</h1>

<p><%= @user.first_name %>'s Profile!</p>

<% if @user.measurement && @user.measurement.gender == "female"%>
  <p>Bust: <%= @user.measurement.bust %></p>
  <p>Waist: <%= @user.measurement.waist %></p>
  <p>Hip: <%= @user.measurement.hips %></p>
<% elsif @user.measurement %>
  <p>Chest: <%= @user.measurement.chest %></p>
  <p>Waist: <%= @user.measurement.waist %></p>
  <p>Inseam: <%= @user.measurement.inseam %></p>
<% end %>

<%= link_to "Back", '/' %>
<%= link_to "Edit My Account Details", edit_user_path(@user) %>

<% if @user.measurement %>
  <%= link_to "Edit My Measurements", edit_users_measurement_path(@user.measurement) %>
<% else %>
  <%= link_to "Add My Measurements", new_measurement_path %>
<% end %>

<%= link_to "Delete My Profile", user_path(@user), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>