<h1>Editing <%= "#{@user.first_name}" %>'s Profile</h1>

<%= form_for :user, url: user_path(@user), method: :patch do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        these edits from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </p>

  <p>
    <%= f.label :hips %>
    <%= f.text_field :hips %>
  </p>

  <p>
    <%= f.label :waist %>
    <%= f.text_field :waist %>
  </p>

  <p>
    <%= f.label :bust %>
    <%= f.text_field :bust %>
  </p>

  <p>
    <%= f.label :chest %>
    <%= f.text_field :chest %>
  </p>

  <p>
    <%= f.label :inseam %>
    <%= f.text_field :inseam %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
