<h1><%= @user.first_name %>'s Profile</h1>

<div class="row info-display">
  <div class="col-md-3">
    <div class="sidebar info-display__links">
      <button type="button" class="btn btn-info btn-md"><%= link_to "Back to all users", admin_users_path %></button>
      <br>
      <%= link_to "Delete User", admin_user_path(@user), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="col-md-9">
    <div class="row">
      <div class="col-md-12 info-display__details">
        <h3><%= @user.first_name %>'s Matches</h3>

          <% @matches.each do |category, matches| %>
          <ul>
            <li><%= category.to_s %></li>
              <% matches.each do |match| %>
              <ul>
                <li><%= match.title %></li>
                <ul>
                  <li><%= match.subtitle %></li>
                  <li>Category: <%= match.category %></li>
                  <li><a href="<%= match.url %>">Product Link: <%= match.url %></a></li>
                  <li><a href="<%= match.image_url %>">Image Link: <%= match.image_url %></a></li>
                  <img src="<%= match.image_url %>">
                  <li>Price: $<%= match.price %></li>
                  <li>Size: <%= match.size %></li>
                  <li>Decade: <%= match.when_made %></li>
                  <li>Description: <%= match.description %></li>
                </ul>
              </ul>
            <% end %>
          </ul>
          <% end %>
      </div><!--col close-->
    </div><!--row close-->


    <div class="row">
      <div class="col-md-12 info-display__details">
        <h3>Your Measurements</h3>
        <% if @user.measurement && @user.measurement.gender == "female"%>
          <p><strong>Bust: </strong><%= @user.measurement.bust %></p>
          <p><strong>Waist: </strong><%= @user.measurement.waist %></p>
          <p><strong>Hips: </strong><%= @user.measurement.hips %></p>
        <% elsif @user.measurement %>
          <p><strong>Chest: </strong><%= @user.measurement.chest %></p>
          <p><strong>Waist: </strong><%= @user.measurement.waist %></p>
          <p><strong>Inseam: </strong><%= @user.measurement.inseam %></p>
        <% end %>
      </div><!--col close-->
    </div><!--row close-->

  </div>
</div>




