<div class="container top full-container">

<h1>Users Index Page</h1>

<div class="row info-display">
  <div class="col-md-3">
    <div class="sidebar info-display__links">
      <p><%= link_to "Back to all products", admin_path %></p>
      <p><%= link_to "E-mail All Users Matches", send_updates_path %></p>
    </div>
  </div>

  <div class="col-md-9">
  <div class="row">
    <div class="col-md-9">
    <h1>Admin Index</h1>
    </div>
  </div>
    <div class="row">
      <h3>Users</h3>
      <div class="col-md-12">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Gender</th>
              <th>Measurements</th>
              <th>User Notes</th>
              <th>Delete User</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <% if !user.admin %>
            <tr>
              <td><%= link_to "#{user.first_name} #{user.last_name}", admin_user_path(user.id) %></td>
              <td><%= user.email %></td>
              <% if user.measurement %>
              <td><%= user.measurement.gender %></td>
              <td>
                <ul>
                  <li>Waist: <%= user.measurement.waist %></li>
                  <li>Chest: <%= user.measurement.chest %></li>
                  <li>Inseam: <%= user.measurement.inseam %></li>
                  <li>Bust: <%= user.measurement.bust %></li>
                  <li>Hips: <%= user.measurement.hips %></li>
                </ul>
              </td>
              <% end %>
              <td></td>
              <td><%= link_to "Delete User", admin_user_path(user), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "btn btn-primary" %></td>
            </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div><!--row close-->
    <div class="row">
      <div class="col-md-12">
        <h3>Admins</h3>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tr>
            <% if user.admin %>
            <td><%= user.first_name %> <%= user.last_name %></td>
            <td><%= user.email %></td>
            <% end %>
          </tr>
          <% end %>


      </div>
  </div>
</div>



